name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Name of the input artifact.
        type: string
        default: sample.csv:latest

      output_artifact:
        description: Name of the output artifact.
        type: string
        default: cleaned_data.csv

      output_type:
        description: Type of the output artifact.
        type: string
        default: cleaned_data

      output_description:
        description: Description of the output artifact.
        type: string
        default: Cleaned data without outliers.

      min_price:
        description: Prices lower than this will be removed.
        type: float

      max_price:
        description: Prices higher than this will be removed.
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
